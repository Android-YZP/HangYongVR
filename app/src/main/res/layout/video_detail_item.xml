<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageButton
        android:id="@+id/ibt_video_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/on_demand_button_close"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:visibility="gone"
        />



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/player"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/on_demand_background_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp">

        <ImageButton
            android:id="@+id/ib_video_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/on_demand_button_down"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/ib_video_shang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/on_demand_button_shang"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"/>

        <ImageButton
            android:id="@+id/ib_video_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/on_demand_button_share"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"/>

    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@mipmap/dian_up_yin"
       >

