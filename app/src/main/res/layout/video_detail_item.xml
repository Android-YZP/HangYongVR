    <LinearLayout
        android:id="@+id/ll_video_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/pay_layer_list_bg"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <com.hy.vrfrog.ui.CircleImageView
            android:id="@+id/img_video_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/detail_head" />

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在直播"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_root_room_name"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/pay_layer_list_bg"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/iv_room_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/detail_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <com.hy.vrfrog.ui.MaequeeText
                android:id="@+id/tv_room_person_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="企业直播"
                android:textColor="#fff"
                android:textSize="11sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="正在直播"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/detail_pay_bg"
            android:gravity="center"
            android:text="收费"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_root_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_root_room_name"
        android:layout_marginTop="8dp"
        android:background="@drawable/pay_layer_list_bg">

        <com.hy.vrfrog.ui.MaequeeText
            android:id="@+id/tv_play_channelName"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:text="企业直播"
            android:textColor="#fff"
            android:textSize="11sp" />

    </RelativeLayout>
   </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_video_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:orientation="vertical"
        android:background="@mipmap/dian_down_yin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            >
            <ImageView
                android:id="@+id/img_video_play_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/video_play_attention"
                />

            <ImageView
                android:id="@+id/img_video_play_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/video_play_price"
                android:layout_marginLeft="3dp"
                />
            <ImageView
                android:id="@+id/img_video_play_3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/video_play_3d"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:id="@+id/tv_video_play_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月球之旅"
                android:textSize="16sp"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:background="@drawable/vedio_kuang"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:textColor="@color/colorGreen"
                    />

                <TextView
                    android:id="@+id/tv_video_play_title_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月球"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_enter_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/video_play_time"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_video_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="02:14"
                    android:textColor="#e0e0e0"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="18dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/video_play_big"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_video_play_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="两周前"
                    android:textColor="#e0e0e0"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="18dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/video_play_date"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_video_play_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="21.3k"
                    android:textColor="#e0e0e0"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_video_play_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:textColor="#bdbdc3"
            android:textSize="14sp"
            android:text="月球之旅"
            android:maxLines="3"
            android:layout_marginBottom="50dp"/>

