<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="183dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@color/white">



        <RadioGroup
            android:id="@+id/radio_group_bottom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                style="@style/radiobutton_video_pay_style"
                android:text="蛙豆"
             />

            <RadioButton
                android:id="@+id/rb_2"
                style="@style/radiobutton_video_pay_style"
                android:text="蛙豆99"
                android:checked="true"
                 />

            <RadioButton
                android:id="@+id/rb_3"
                style="@style/radiobutton_video_pay_style"
                android:text="蛙豆"
               />
        </RadioGroup>














        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_exceptional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/exceptional_kuang"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="25dp">

                <TextView
                    android:id="@+id/ltv_exceptional_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="88"
                    android:textColor="@drawable/exceptional_font"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/ltv_exceptional_zi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="蛙豆"
                    android:textColor="@drawable/exceptional_font"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_exceptional1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/exceptional_kuang"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp">

                <TextView
                    android:id="@+id/ltv_exceptional_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="188"
                    android:textColor="@drawable/exceptional_font"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/ltv_exceptional_zi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="蛙豆"
                    android:textColor="@drawable/exceptional_font"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_exceptional2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/exceptional_kuang"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="25dp">

                <TextView
                    android:id="@+id/ltv_exceptional_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="288"
                    android:textColor="@drawable/exceptional_font"
                    android:textSize="18sp"
                   />
                <TextView
                    android:id="@+id/ltv_exceptional_zi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="蛙豆"
                    android:textColor="@drawable/exceptional_font"
                    android:textSize="15sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他："
                android:textSize="16sp"
                android:layout_marginLeft="52dp"
                android:textColor="#666666"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/ed_exceptional_num3"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:inputType="number"
                android:background="@drawable/exceptional_pay"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="16dp"
            android:background="#39f0d4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exceptional_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取  消"
                android:textSize="16sp"
                android:textColor="#39f0d4"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_exceptional_yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="打  赏"
                android:textSize="16sp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="#39f0d4"/>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>