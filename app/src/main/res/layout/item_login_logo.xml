<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@mipmap/item_login_1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phone_item_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_password_item_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:gravity="center_vertical"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="7dp"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <CheckBox
            android:id="@+id/cb_login_checkBox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/selector_login_check"
            android:button="@null"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_login_rem_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="记住密码"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_item_forget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:gravity="center"
            android:text="忘记密码？"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/item_login_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_vr_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="25sp" />
</LinearLayout>