<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">>
        <ImageView
            android:id="@+id/item_login_img"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:src="@mipmap/item_login_1" />
        <EditText
            android:id="@+id/item_login_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="63dp"
            android:hint="手机号"
            android:maxLines="1"
            android:gravity=""
            android:background="@null"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/item_login_et1"
            android:layout_below="@+id/item_login_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="90dp"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginRight="63dp"
            android:gravity=""
            android:hint="密码"
            android:textSize="18sp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@null"
            android:background="@drawable/selector_login_check"
            android:id="@+id/checkBox"
            android:layout_marginLeft="55dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/item_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="记住密码"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/item_login_tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="忘记密码？"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="65dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/item_login_but"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="登录"
        android:gravity="center"
        android:textSize="25sp"
        android:background="#06b9d7"
        android:layout_marginTop="15dp"/>
</LinearLayout>