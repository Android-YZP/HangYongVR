<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <com.hy.vrfrog.ui.XCRoundRectImageView
        android:id="@+id/xri_enter_img"
        android:layout_width="1025dp"
        android:layout_height="200dp"
        android:src="@mipmap/recommend_seat_background"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <com.hy.vrfrog.ui.XCRoundRectImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@mipmap/play_mask_top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="22dp"
            android:layout_gravity="center"

            >

            <com.hy.vrfrog.ui.CircleImageView
                android:id="@+id/img_enter_home_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/detail_head"
                />

            <TextView
                android:id="@+id/tv_enter_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王妤涵"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLength="6"
                />

        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_live_home"
            android:gravity="center"
            android:layout_gravity="center"

            >
            <ImageView
                android:id="@+id/img_enter_home_play_state"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/bill_icon_registration_gift"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/tv_enter_home_live_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="11dp"
                android:paddingRight="2dp"
                />

        </LinearLayout>


    </LinearLayout>


    <com.hy.vrfrog.ui.XCRoundRectImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@mipmap/play_mask_bottom"
        android:layout_alignParentStart="true"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        />



        <LinearLayout
            android:id="@+id/ll_enter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="160dp"
            >

            <TextView
                android:id="@+id/tv_enter_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="春天的故事"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLength="6"
                />

            <TextView
                android:id="@+id/tv_enter_home_people_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="123445人"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLength="6"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_enterprise_live_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付费"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_personal_live_pay"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="11dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>




</RelativeLayout>