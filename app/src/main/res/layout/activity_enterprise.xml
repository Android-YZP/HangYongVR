<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <com.hy.vrfrog.ui.XCRoundRectImageView
        android:id="@+id/xri_enter_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/replay_bg"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/ll_enter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_enter_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="春天的故事"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_enter_home_people_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="123445人"
            android:layout_marginTop="5dp"
            android:textSize="11sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_live_home"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_enter_home_play_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bill_icon_registration_gift"
            android:paddingTop="5dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_enter_home_live_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        >

        <com.hy.vrfrog.ui.CircleImageView
            android:id="@+id/img_enter_home_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/detail_head"
            />

        <TextView
            android:id="@+id/tv_enter_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王妤涵"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"/>


    </LinearLayout>

</RelativeLayout>