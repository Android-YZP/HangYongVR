<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <com.hy.vrfrog.ui.XCRoundRectImageView
        android:id="@+id/img_recommend_adapter_two"
        android:layout_width="196dp"
        android:layout_height="101dp"
        android:src="@mipmap/img3"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tv_recommend_adapter_two_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暗夜传说"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_recommend_adapter_two_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暗夜传说的返回数据放到"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>


</LinearLayout>