<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:id="@+id/img_xc_personal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/recommend_seat_background"
        android:scaleType="centerCrop"

        />

    <com.hy.vrfrog.ui.CircleImageView
        android:id="@+id/img_live_home_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/detail_head"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"

        />

    <LinearLayout
        android:id="@+id/ll_live_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_live_home_head"
        >

        <TextView
            android:id="@+id/tv_live_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="春天的故事"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="3"
            />

        <TextView
            android:id="@+id/tv_live_home_people_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="123445人"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="3"

            />


    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_live_home"
            >
            <ImageView
                android:id="@+id/img_live_home_play_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/camera_off"
                android:paddingTop="5dp"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                />

            <TextView
                android:id="@+id/tv_live_home_live_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                />

        </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/ll_live_title"
        android:layout_marginTop="200dp"
        >



        <TextView
            android:id="@+id/tv_live_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李宣亚"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLength="5"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_personal_live_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收费"
        android:textColor="@color/colorGreen"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_below="@id/ll_live_title"
        android:background="@drawable/bg_personal_live_pay"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        />

</RelativeLayout>

