<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_register_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:src="@mipmap/item_register_1" />
        <EditText
            android:id="@+id/item_register_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="63dp"
            android:hint="手机号"
            android:maxLines="1"
            android:gravity=""
            android:background="@null"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/item_register_et1"
            android:layout_below="@+id/item_register_et"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="90dp"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginRight="63dp"
            android:gravity=""
            android:hint="验证码"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/item_register_et2"
            android:layout_below="@+id/item_register_et1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="63dp"
            android:hint="密码"
            android:maxLines="1"
            android:gravity=""
            android:background="@null"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/item_register_et3"
            android:layout_below="@+id/item_register_et2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="90dp"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginRight="63dp"
            android:gravity=""
            android:hint="确认密码"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/item_register_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="短信验证码"
            android:textSize="18sp"
            android:background="@drawable/more_bg"
            android:layout_alignBottom="@+id/item_register_et1"
            android:layout_alignEnd="@+id/item_register_et"
            android:layout_alignTop="@+id/item_register_et1" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@null"
            android:background="@drawable/selector_login_check"
            android:id="@+id/checkBox"
            android:layout_marginLeft="55dp"
            android:gravity="center"/>

      <TextView
          android:id="@+id/item_register_tv1"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:layout_marginLeft="5dp"
          android:gravity="center_vertical"
          android:text="我已阅读并同意《天焱TV用户使用协议》"
          android:textSize="12sp"/>




    </LinearLayout>

    <Button
        android:id="@+id/item_login_but"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="注册"
        android:gravity="center"
        android:textSize="25sp"
        android:background="#06b9d7"
        android:layout_marginTop="15dp"/>

</LinearLayout>