<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c34"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:id="@+id/tv_information_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginLeft="9dp"
            android:src="@mipmap/history_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="填写信息"
            android:textColor="#fff"
            android:textSize="16sp"
             />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/fill_information"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">


        <EditText
            android:id="@+id/et_information_name"
            android:layout_width= "match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:hint="请输入真实姓名"
            android:textColor="#fff"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color1"
            android:textColorHint="#4dffffff"
            android:textSize="15sp"
            android:lines="1"
            android:maxLines="1"
            android:gravity="center_vertical"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/fill_information"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">


        <EditText
            android:id="@+id/et_information_num"
            android:layout_width= "match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:hint="请输入身份证号"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color1"
            android:textColor="#bdbdc3"
            android:textColorHint="#4dffffff"
            android:lines="1"
            android:maxLines="1"
            android:textSize="15sp"
            android:gravity="center_vertical"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_information_next"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="39dp"
        android:text="下一步"
        android:textColor="#bdbdc3"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@mipmap/information_button_next_step"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="25dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_fill_yes" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:textColor="#919292"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_information_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《主播协议》"
            android:textColor="#02d3f3"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>