<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">


    <com.google.vr.sdk.widgets.pano.VrPanoramaView
        android:id="@+id/pano_view_login"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:scrollbars="@null" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_return_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/item_login_return"/>
            <ImageView
                android:id="@+id/login_logo_img"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@mipmap/item_login_logo" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_login_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="登录"
                android:textColor="#ffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_login_register"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="15dp"
                android:text="注册"
                android:textColor="#3fffffff"
                android:textSize="22sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <include
                android:id="@+id/root_login_register"
                android:visibility="gone"
                layout="@layout/item_register" />

            <include
                android:id="@+id/root_login_login"
                layout="@layout/item_login_logo"
                />

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>
