<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#1c1c34"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp">

        <ImageView
            android:id="@+id/tv_video_list_header"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/tv_video_list_mask"
            android:layout_width="match_parent"
            android:layout_marginTop="166dp"
            android:scaleType="fitXY"
            android:layout_height="30dp"
            android:background="@mipmap/hua_ti"/>

        <TextView
            android:id="@+id/video_list_topic_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="170dp"
            android:lines="1"
            android:text="关键词的形式发布微博，括号内的关键词即为"
            android:textColor="#666666"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/icon_tab" />

            <TextView
                android:id="@+id/tv_main_topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="视频"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/video_list_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="15个視頻"
            android:textColor="#949494"
            android:textSize="13sp" />

    </RelativeLayout>


</LinearLayout>


